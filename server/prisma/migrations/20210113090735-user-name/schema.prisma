datasource db {
    provider = "sqlite"
    url = "***"
}

generator client {
    provider = "prisma-client-js"
}

model Task {
    id          Int      @id @default(autoincrement())
    name        String
    createdAt   DateTime @default(now())
    createdBy   User     @relation(fields: [createdById], references: [id])
    createdById Int
    completed   Boolean  @default(false)
}

model User {
    id       Int    @id @default(autoincrement())
    username String
    email    String @unique
    password String
    tasks    Task[]
}
